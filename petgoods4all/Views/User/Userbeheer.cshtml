@model List<petgoods4all.Models.Account>
@{
    ViewData["Title"] = "Klant Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //petgoods4all.Models.Account item = Model[0];
}
<div class="container-fluid" style="background-color:#ffe8d3;">
    <div>
        <h2>Gegevens beheer</h2>
        <p>
            <a href="~/User/UserHome">Home</a>
        </p>
        <hr />
            <dl class="dl-horizontal">
            @foreach(var item in ViewBag.AccountData)
            {
                @if(item.id == @ViewBag.userId)
                {
                    <dt>
                        <p>Email:</p>
                    </dt>
                    <dd>
                        <p>@item.email</p>
                        
                    </dd>
                    <dt>
                        <p>Wachtwoord:</p>
                    </dt>
                    <dd>
                        <p>@item.password</p>
                    </dd>
                    <dt>
                        <p>Voornaam:</p>
                    </dt>
                    <dd>
                    <p>@item.voornaam</p>
                    </dd>
                    <dt>
                        <p>Achternaam:</p>
                    </dt>
                    <dd>
                    <p>@item.achternaam</p>
                    </dd>
                    <dt>
                        <p>Straatnaam:</p>
                    </dt>
                    <dd>
                        <p>@item.straatnaam</p>
                    </dd>
                    <dt>
                        <p>Huisnummer:</p>
                    </dt>
                    <dd>
                        <p>@item.huisnummer

                        </p>
                    </dd>
                    <dt>
                        <p>Postcode:</p>
                    </dt>
                    <dd>
                        <p>@item.postcode

                        </p>
                    </dd>
                    <dt>
                        <p>Provincie:</p>
                    </dt>
                    <dd>
                        <p>@item.provincie

                        </p>
                    </dd>
                    <dt>
                        <p>Telefoonnummer:</p>
                    </dt>
                    <dd>
                        <p>@item.telefoonnummer

                        </p>
                    </dd>
                }
            }
            <p>
                <a asp-action="updateGegevens" asp-controller="User">Bewerken</a>
            </p>
        
            </dl>
        </div>
    </div>
