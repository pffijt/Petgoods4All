@{
    ViewBag.Title = "OrderHistory";
}


<br><br><br>

<!-- HEADER -->
        <div class="container-fluid" style="background-color:#ffe8d3;">
            <div class="row">
                <div class="col-md-6">
                    <h2>Bestel Geschiedenis</h2>
                </div>
            </div>
            <br>
            <!-- WHEN NOT HARDCODED THESE SHOULD BE GENERATED WITH A FOREACH -->
            <div class="row">
                <br><br>
                <div class="col-md-12">
                    <table class="table">
                        <tr>
                            <td>Bestelling</td>
                            <td>Datum</td>
                            <td>Bedrag</td>
                            <td>Orderstatus</td>
                            <td>Bestelling bekijken</td>
                        </tr>
                        @foreach (var item in ViewBag.Orders)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Datum</td>
                                <td>$ @item.Prijs</td>
                                <td>@item.OrderStatus</td>
                                <td>@Html.ActionLink("Bestelling bekijken", "#", "Order", new { area = "" }, new { @class = "" })</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>