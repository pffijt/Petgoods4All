
@{
    ViewData["Title"] = "ViewOrder";
}

<h2>Bestel Geschiedenis</h2>
<div class="container-fluid" id="bodyPB" style="background-color:#ffe8d3;">
    <div class="row">
        <br><br>
        <div class="col-md-12">
            <p align="left">Producten</p>
        </div>
    </div>
    <hr>
    @foreach (var item in ViewBag.ViewOrder)
    {
        <div class="row">
            <div class="col-md-2">
                <br>
                <img src="@item.image" width="180px" />
            </div>
            <div class="col-md-2">
                <h3>@item.Naam</h3>
                <p>Quantity: @item.Kwantiteit</p>
                <p>Price: $ @item.Prijs</p>
            </div>
        </div>
        <br>
        <hr>
    }
</div>

