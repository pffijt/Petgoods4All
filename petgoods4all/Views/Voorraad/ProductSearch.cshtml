
@{
    ViewBag.Title = "Producten";
}
<br />
<br />
<br />
<head>
    <link rel="stylesheet" href="~/Content/productBrowsen.css" />
</head>
<div class="container-fluid" id="bodyPB" style="background-color:#ffe8d3;">
    <h2>Zoeken</h2>
    <hr />
    <br />
    <!--Filters-->
    <div class="row">
    </div>
    <br/>
    <div class="pull-right">
            @ViewBag.firstnum - @ViewBag.secondnum van @ViewBag.count resultaten
    </div>
    <br />
    <!--end selecting-->
    <!--begin products-->
    <div class="container-fluid">
        <div id="browsProduct">
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-inline">
                        <form method="post" asp-controller="Voorraad" asp-action="Search" asp-route-productSearch="@ViewBag.SearchedString">
                            <select id="DierDropdown" name="DierDropdown" class="form-control">
                                <option value="" disabled selected>Dier</option>
                                @{}
                                @foreach (var item in ViewBag.Dier)
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                            <select id="SubklassDropwdown" name="SubklasseDropdown" class="form-control">
                                <option value="" disabled selected>Subklasse</option>
                                @foreach (var item in ViewBag.Subklasse)
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                            <input type="text" class="form-control" id="minPrijs" name="minPrijs" placeholder="Minimale prijs" />
                            <input type="text" class="form-control" id="maxPrijs" name="maxPrijs" placeholder="Maximale prijs" />
                            <input type="submit" class="btn btn-success" />
                        </form>
                    </div>
                </div>
            </div>
            <div class="row">

                @foreach (var item in ViewBag.Voorraad)
                {
                        @*<div id="browsProductContainer" class="col-sm-3 offset-1">
                    <img src="@item.image "  style="width:140px;height:140px;" />
                    <br />
                    <p><a asp-area="" asp-controller="Home" asp-action="productpage" asp-route-identication="@item.Id">@item.Naam</a> <br />&euro; @item.Prijs</p>
                </div>*@
                        <div id="browsProductContainer" class="col-lg-12">
                            <table>
                                <tr>
                                    <a asp-area="" asp-controller="Home" asp-action="productpage" asp-route-identication="@item.Id" class="imageI">
                                        <img src="@item.image" alt="" onerror="this.onerror=null;this.src='../Content/Images/dogfood.jpg';" style="width:140px;height:140px;" />
                                    </a>
                                </tr>
                                <tr>
                                    <td align="center">
                                        <li style="list-style-type: none;"><a asp-area="" asp-controller="Home" asp-action="productpage" asp-route-identication="@item.Id">@item.Naam</a></li>
                                    </td>
                                </tr>
                                <tr>
                                    <td align="center">
                                        <a asp-area="" asp-controller="Home" asp-action="productpage" asp-route-identication="@item.Id">
                                            &#8364; @item.Prijs
                                        </a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    }
            </div> 
        </div>
    </div>
    <!--end products-->
    <!--begin page pagination-->
    @{
        string fvis;
        string lvis;
        var second = ViewBag.paginationindex - 1;
        var third = ViewBag.paginationindex + 1;
        if(second != 0)
        {
            fvis = "visible";
        }
        else
        {
            fvis = "hidden";
        }
        if(third >= (ViewBag.count/16)+2 )
        {
            lvis = "hidden";
        }
        else
        {
            lvis = "visible";
        }
        if(second < 1)
        {
            second = 1;
        }
    }
    <div class="row">
        <div class="text-center">
            <ul class="pagination">
                <!--<li class="page-item"><a class="page-link" href="#">Previous</a></li>-->
                <li class="page-item" style="visibility:@fvis">
                <a class="page-link" asp-area="" asp-controller="Voorraad" asp-action="ProductSearch"  asp-route-P="@second"
                asp-route-DierDropdown="@ViewBag.a" asp-route-SubklasseDropdown="@ViewBag.b" asp-route-minPrijs="@ViewBag.c" asp-route-maxPrijs="@ViewBag.d" asp-route-s="@ViewBag.SearchedString">@second</a></li>
                <li class="page-item"><a style="color:black;"class="page-link" asp-area="" asp-controller="Voorraad" 
                asp-action="ProductSearch" asp-route-P="@ViewBag.paginationindex"  
                asp-route-DierDropdown="@ViewBag.a" asp-route-SubklasseDropdown="@ViewBag.b" asp-route-minPrijs="@ViewBag.c" asp-route-maxPrijs="@ViewBag.d" asp-route-s="@ViewBag.SearchedString">@ViewBag.paginationindex</a></li>
                <li class="page-item" style="visibility:@lvis"><a class="page-link" asp-area="" asp-controller="Voorraad" asp-action="ProductSearch"  asp-route-P="@third"
                asp-route-DierDropdown="@ViewBag.a" asp-route-SubklasseDropdown="@ViewBag.b" asp-route-minPrijs="@ViewBag.c" asp-route-maxPrijs="@ViewBag.d" asp-route-s="@ViewBag.SearchedString">@third</a></li>
                <!--<li class="page-item"><a class="page-link" href="#">Next</a></li>-->
            </ul>
        </div>
    </div>
    <!--end page pagination-->
</div>
    </div>

