<!DOCTYPE html>
@using petgoods4all.Models;
@model PagedList.IPagedList<petgoods4all.Models.Account>
@using PagedList.Mvc;
@using System.Web.Mvc;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<html>
<head>
    <meta charset="utf-8" />
    <title>ViewData["Title"] - Petgoods4All</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/Content/signin.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <br /><br /><br /><br /><br /><br /><br />
    <form class="table" method="put" style="background-color:#ffe8d3;">
        <div class="row">
            <h2>Klant beheer</h2>
            <p>
                <a href="Admin/AdminInstellingen">Instellingen</a> |
                <a href="Admin/AdminProductbeheer">Product beheer</a>
            </p>
        </div>
        <div class="row">
            <button asp-controller="Admin" asp-action="ReadAccount" class="btn btn-sm btn-primary btn-block" type="submit">Search</button>
            <input asp-controller="Admin" asp-action="ReadAccount" name="searchEmail" id="searchEmail" class="form-control btn-sm" type="search" placeholder="Zoek E-mail" aria-label="Search">

        </div>
        <div class="row">
            <table>
                <tr>
                    @*<th>Id</th>*@
                    <th>VoorNaam</th>
                    <th>Achternaam</th>
                    <th>E-mail</th>
                    <th>Telefoonnummer</th>
                    <th>Addres</th>
                    <th>Wachtwoord</th>
                    @*<th>Save</th>*@
                    <th>X</th>
                </tr>
                <tr>
                    @*<td>
                            <input type="number" id="inputAdminKlantId" name="inputAdminKlantId" class="form-control" placeholder="Id" required autofocus>
                        </td>*@
                    <td>
                        <input type="text" id="inputAdminKlantVoorNm" name="inputAdminKlantVoorNm" class="form-control" placeholder="Voornaam">
                    </td>
                    <td>
                        <input type="text" id="inputAdminKlantAchterNaam" name="inputAdminKlantAchterNaam" class="form-control" placeholder="Achternaam">
                    </td>
                    <td>
                        <input type="email" id="inputAdminKlantMail" name="inputAdminKlantMail" class="form-control" placeholder="E-mail">
                    </td>
                    <td>
                        <input type="number" id="inputAdminKlantTel" name="inputAdminKlantTel" class="form-control" placeholder="Telefoonnummer">
                    </td>
                    <td>
                        <input type="text" id="inputAdminKlantAdres" name="inputAdminKlantAdres" class="form-control" placeholder="Adres">
                    </td>
                    <td>
                        <input type="password" id="inputAdminKlantWw" name="inputAdminKlantWw" class="form-control" placeholder="Wachtwoord">
                    </td>
                    <td>
                        <button asp-controller="Admin" asp-action="CreateAccount" class="btn btn-sm btn-primary btn-block" type="submit">Opslaan</button>
                    </td>
                    <td>
                        <button asp-controller="Admin" asp-action="DeleteAccount" class="btn btn-sm btn-primary btn-block" type="submit">Verwijder</button>
                    </td>
                </tr>
            </table>
        </div><br /><br />
        <h3>Klanten</h3>

        @using (Html.BeginForm("ReadIndexAccounts", "Admincontroller", FormMethod.Get))
        {
            <p>
                Zoeken op achternaam: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                <input type="submit" value="Search" />
            </p>
        }
        <table class="table">
            <tr>
                <th>
                    @Html.ActionLink("Achternaam", "ReadIndexAccounts", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    @Html.ActionLink("E-mail", "ReadIndexAccounts", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    @Html.ActionLink("Voornaam", "ReadIndexAccounts", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Achternaam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Voornaam)
                    </td>
                </tr>
            }
        </table>
    </form>
</body>
</html>