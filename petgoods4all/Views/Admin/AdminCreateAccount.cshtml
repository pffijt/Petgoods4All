@model petgoods4all.Models.Account

@{
    ViewData["Title"] = "AdminCreateAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Maak een nieuw Account</h2>

<h4 style="background-color:#ffe8d3;">Account</h4>
<hr />
<div class="row">
    <div class="container-fluid" style="background-color:#ffe8d3;">
        <form asp-action="AdminCreateAccountSave">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Admin" /> @Html.DisplayNameFor(model => model.Admin)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="voornaam" class="control-label"></label>
                <input asp-for="voornaam" class="form-control" />
                <span asp-validation-for="voornaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="achternaam" class="control-label"></label>
                <input asp-for="achternaam" class="form-control" />
                <span asp-validation-for="achternaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="straatnaam" class="control-label"></label>
                <input asp-for="straatnaam" class="form-control" />
                <span asp-validation-for="straatnaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="telefoonnummer" class="control-label"></label>
                <input asp-for="telefoonnummer" class="form-control" />
                <span asp-validation-for="telefoonnummer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Opslaan" class="btn btn-default btn-primary">Opslaan </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Terug naar de lijst">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
