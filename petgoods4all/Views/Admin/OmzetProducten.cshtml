
@{
    ViewData["Title"] = "Verkochte Producten";
}

<div class="container-fluid" id="bodyPB" style="background-color:#ffe8d3;">
    <h2>Verkochte Producten</h2>
    <div class="row">
        <br><br>
        <div class="col-md-8">

            <h2>Totaal prijs: &#8364; @ViewBag.Prijs</h2>
            <input type="text" value="@ViewBag.Prijs" name="prijs" id="prijs" style="visibility:hidden">

        </div>
        <div class="col-md-2"><br><br>
            <p align="left">Producten</p>
        </div>
    </div>
    <hr>
    @foreach (var item in ViewBag.Producten)
    {
        <div class="row">
            <div class="col-md-6">
                <br>
                <img src="@item.image" width="180px" onerror="this.onerror=null;this.src='../Content/Images/dogfood.jpg';" />
            </div>
            <div class="col-md-6">
                <h3>@item.Naam</h3>
                <p>Quantity: @item.Kwantiteit</p>
                <p>Price: &#8364; @item.Prijs</p>
            </div>
            <div class="col-md-0">
                <br><br>
            </div>
        </div>
        <br>
        <hr>
    }
</div>

