    @if (Context.Session.GetInt32("UID") != null)
    {
        <form class="form-products" method="post" asp-controller="Home" asp-action="AddReviews">
            <select id="rating" name="rating">
                @for (var i = 1; i < 6; i++)
                {
                    <option>@i</option>
                }
            </select><br>
