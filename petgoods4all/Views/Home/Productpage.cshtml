<head>
    <meta charset="utf-8" />
    <title>ViewData["Title"] - Petgoods4All</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/Content/productPage.css" />
    </environment>
</head>
<div class="container-fluid" style="background-color:#ffe8d3;">
    <form class="form-products" method="post" asp-controller="Voorraad" asp-action="AddToShoppingCart">
        <ul class="breadcrumb">
            <li><a href="../">Home</a></li>
            <li>
                <a href="#">
                    @foreach (var item in Model)
                    {@Html.DisplayFor(modelItem => item.Naam)
                }
            </a>
        </li>
    </ul>
    <div class="row">
        <div class="col-sm-4">
            <img src="@foreach(var item in Model){@Html.DisplayFor(modelItem => item.image)}" alt="@foreach(var item in Model){@Html.DisplayFor(modelItem => item.Naam)}" />
        </div>
        <div class="col-sm-8">
            <h2>
                @foreach (var item in Model)
                {@Html.DisplayFor(modelItem => item.Naam)
            }
        </h2>
        <p style="color:red;">
            @foreach (var item in Model)
            {@Html.DisplayFor(modelItem => item.Prijs)
        }
    </p>
    <label for="sel1">Kwantiteit:</label>
    <div>
        <div class="form-group col-sm-4">
            <select class="form-control" id="Quantity" name="Quantity">
                @foreach (var item in Model)
                {
                    @for (var i = 1; i < item.Kwantiteit + 1; i++)
                    {
                        <option>@i</option>
                    }
                }
            </select>
        </div>
        @*@foreach (var item in Model)
            {
                <input type="text" value="@item.Id" name="productId" id="productId" style="visibility:hidden">
            }*@

        @foreach (var item in Model)
        {
            <button type="submit" asp-controller="Voorraad" asp-action="AddToShoppingCart" asp-route-identication="@item.Id" class="btn btn-warning col-sm-4">Naar winkelwagen</button>
        }
        @foreach (var item in Model)
        {
            <form action="" method="POST">
                <button class="btn btn-danger col-sm-1" asp-controller="Home" asp-route-identication="@item.Id" type="submit">&#10084;</button>
            </form>
        }
    </div>
</div>
<h5>Bezorg informatie</h5>
</div>
</form>
